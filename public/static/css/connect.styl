body
    background-color #f6f6f6
    font-size 14px
    margin 0px
    
.mtop16
    margin-top 16px
    
.box
    background-color #fff
    border-radius 8px
    position absolute
    border 1px solid #d6d6d6
    width 500px
    .btn-success
        width 100%
        background-color #0ca6c4
        border 0px
    .form-control
        &:focus
        &:active
            outline none
            box-shadow  none
    .inside
        padding 16px
    .header
        background-color #f4f4f4
        border-radius 8px 8px 0px 0px
        padding 16px
        a
             img
                 display block
                 margin 0px auto
                 width 50%
    .footer
        text-align center
        a
            display inline-block
            font-size .8em
            &:last-child
                margin-left 24px
.box_login
     left calc(50%- 250px)
     top calc(50% - 210px)

.box_register
     left calc(50%- 250px)
     top calc(50% - 334px)
        