body
    background-color #f5f6fa
    font-size 14px;
    font-family: 'Roboto', sans-serif;
    
h2,h3,h4,h5,ul,body,html
    
    padding 0px
    margin 0px
    
.mtop16
    margin-top  16px

.wrapper
     min-height 100vh
     overflow hidden
    .col1
         float left
         position relative
         z-index 999
         width 17%  
    .col2
        float left
        width  83%
.sidebar 
    background-color #f4f4f4
    min-height 100vh
    .section-top
        background-color #f4f4f4
        box-shadow 0rem 0.5rem 1rem rgba(0,0,0,0.15)
        .logo
            display block
            margin 0px auto
            padding-top 15px
            width 90%
        .user
            color #0ca6c4 !important
            padding 16px
            a
                color #0ca6c4
                font-size 1.2em
.main
    display block
    margin-top 8px
    ul
        li
            margin-bottom 4px
            a
                color #0ca6c4 !important
                display block
                font-size 1.1em
                padding 12px 16px
                i
                    margin-right 10px
                &:hover
                    background-color #0ca6c4
                    box-shadow 0rem 0.5rem 1rem rgba(0,0,0,0.15)
                    color #fff !important 
                    text-decoration none !important
.navbar
    background-color #eea3cd
    a
        color #424242  !important
.page
    padding-top 16px
    padding-bottom 16px
    .breadcrumb
        background-color #fff
        box-shadow 0rem 0.5rem 1rem rgba(0,0,0,0.15)!important
        .breadcrumb-item
        a
            &:hover
             text-decoration none !important
    .panel
        background-color #fff
        border-radius 6px
        border-bottom 2px solid #2acaaff
        width 100%
        .header
            border-bottom 1px solid #e8e8e8
            h2.title
              display inline-block
              color #19213d
              font-size  1.1em
              padding 12px 16px
        .inside
            padding 16px
            .nav
                .nav-link
                    color #eea3cd 
                    border 1px solid #eea3cd 
                    margin-right 8px
                    &:hover
                        background-color  #eea3cd
                        color #fff
                        
                        
                    
            
.opt
    a 
         border-radius 4px
         border 1px solid #dedede
         display inline-block
         padding 8px 12px